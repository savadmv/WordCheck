<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/item_360_container"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="@dimen/card_list_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingVertical="@dimen/list_item_padding">

        <TextView
            android:id="@+id/tv_definition"
          android:textColor="@color/colorPrimaryMedium"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_content_size"
            android:layout_height="wrap_content"
            android:text="@string/definition_test" />


    </LinearLayout>
</android.support.v7.widget.CardView>